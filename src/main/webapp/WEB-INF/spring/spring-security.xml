<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns="http://www.springframework.org/schema/security" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd 
	http://www.springframework.org/schema/security 
	http://www.springframework.org/schema/security/spring-security-3.1.xsd">
	<http pattern="/resources/**" security="none" />
	<http pattern="/images/**" security="none" />
	<http use-expressions="true" >
		<intercept-url pattern="/resources/**" access="permitAll"/>
		<intercept-url pattern="/signin" requires-channel="https" access="permitAll" />
		<intercept-url pattern="/register-user" requires-channel="https" access="permitAll" />
		<intercept-url pattern="/process-register-user" access="permitAll"/>
		<intercept-url pattern="/change-password-step-1" access="permitAll"/>
		<intercept-url pattern="/change-password-step-2" access="permitAll"/>
		<intercept-url pattern="/change-password-step-3/**" access="permitAll"/>
		<intercept-url pattern="/change-password-step-4" access="permitAll"/>
		<intercept-url pattern="/admin/**" access="hasRole('ROLE_ADMIN')" />
		<intercept-url pattern="/operator/operator-customer-meals" access="hasRole('ROLE_DESK_ORDERS_OPERATOR')" />
		<intercept-url pattern="/operator/operator-customer-meals-list-ajax" access="hasRole('ROLE_DESK_ORDERS_OPERATOR')" />
		<intercept-url pattern="/operator/operator-process-customer-meals-desk-order" access="hasRole('ROLE_DESK_ORDERS_OPERATOR')" />
		<intercept-url pattern="/operator/find-customer-meals.ajax" access="hasRole('ROLE_DESK_ORDERS_OPERATOR')" />
		<intercept-url pattern="/operator/operator-customer-order-pagination.ajax" access="hasRole('ROLE_ONLINE_ORDERS_OPERATOR')" />
		<intercept-url pattern="/operator/operator-customer-active-orders" access="hasRole('ROLE_ONLINE_ORDERS_OPERATOR')" />
		<intercept-url pattern="/**" access="hasRole('ROLE_CUSTOMER')" />
		<form-login login-page="/signin" default-target-url="/customer-meals-list" authentication-success-handler-ref="authenticationSuccessHandler" authentication-failure-url="/failure"/>
		<access-denied-handler error-page="/denied"/>
		<logout/>
	</http>
	<authentication-manager>
		<authentication-provider user-service-ref="userDetailsService">
		</authentication-provider>
	</authentication-manager>
	<beans:bean id="userDetailsService" class="com.gngapps.yours.security.LoginUserDetailsService" />
	<beans:bean id="authenticationSuccessHandler" class="com.gngapps.yours.security.AuthenticationSucessHandlerImpl" />
</beans:beans>
